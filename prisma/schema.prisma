// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Chats {
  GLOBAL
}

model Thread {
  id        String    @id @default(uuid())
  chat      Chats     @default(GLOBAL)
  title     String
  message   String
  username  String?
  comments  Comment[]
  updatedAt DateTime  @default(now()) @updatedAt
  createdAt DateTime  @default(now())
}

model Comment {
  id        String    @id @default(uuid())
  message   String
  threadId  String
  thread    Thread    @relation(fields: [threadId], references: [id])
  parentId  String?
  parent    Comment?  @relation("CommentSection", fields: [parentId], references: [id])
  comments  Comment[] @relation("CommentSection")
  updatedAt DateTime  @default(now()) @updatedAt
  createdAt DateTime  @default(now())
}
