generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id        String   @id @default(uuid())
  userHash  String
  username  String?
  message   String
  parentId  String?
  parent    Thread?  @relation("CommentSection", fields: [parentId], references: [id])
  comments  Thread[] @relation("CommentSection")
  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())
}
